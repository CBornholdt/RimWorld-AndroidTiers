<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="EnergySystemImplantBase" Abstract="True">
    <label>energy system component</label>
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>1.0</Flammability>
			<DeteriorationRate>2.0</DeteriorationRate>
			<Beauty>-4</Beauty>
		</statBases>
    <altitudeLayer>Item</altitudeLayer>
    <tickerType>Never</tickerType>
    <alwaysHaulable>true</alwaysHaulable>
    <isBodyPartOrImplant>true</isBodyPartOrImplant>
    <tradeTags>
      <li>BodyPartOrImplant</li>
    </tradeTags>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <thingCategories>
      <li>BodyPartsArtificial</li>
    </thingCategories>
    <pathCost>10</pathCost>
    <techHediffsTags>
      <li>Advanced</li>
    </techHediffsTags>
  </ThingDef>


  <ThingDef ParentName="EnergySystemImplantBase">
    <defName>AT_EnergySystemBatterySmall</defName>
    <label>small battery</label>
    <description>small energy battery</description>
    <graphicData>
      <texPath>Things/Item/Implant/Implant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <itemGeneratorTags>
      <li>SpecialReward</li>
    </itemGeneratorTags>
    <statBases>
      <MarketValue>800</MarketValue>
      <Mass>0.2</Mass>
    </statBases>
    <comps>
      <li Class="MOARANDROIDS.EnergySystemProps_Battery">
        <storageCapacity>1</storageCapacity>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="EnergySystemImplantBase">
    <defName>AT_EnergySystemBatteryMedium</defName>
    <label>medium battery</label>
    <description>medium energy battery</description>
    <graphicData>
      <texPath>Things/Item/Implant/Implant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <itemGeneratorTags>
      <li>SpecialReward</li>
    </itemGeneratorTags>
    <statBases>
      <MarketValue>800</MarketValue>
      <Mass>0.2</Mass>
    </statBases>
    <comps>
      <li Class="MOARANDROIDS.EnergySystemProps_Battery">
        <storageCapacity>2</storageCapacity>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="EnergySystemImplantBase">
    <defName>AT_EnergySystemReactorSmall</defName>
    <label>small reactor</label>
    <description>small energy reactor</description>
    <graphicData>
      <texPath>Things/Item/Implant/Implant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <itemGeneratorTags>
      <li>SpecialReward</li>
    </itemGeneratorTags>
    <statBases>
      <MarketValue>800</MarketValue>
      <Mass>0.2</Mass>
    </statBases>
    <comps>
      <li Class="MOARANDROIDS.CompProperties_AndroidImplant">
      </li>
    </comps>
  </ThingDef>
