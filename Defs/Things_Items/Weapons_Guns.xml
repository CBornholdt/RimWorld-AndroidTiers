<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef Abstract="True" Name="BaseWeaponSpecialAtlas">
		<thingClass>ThingWithComps</thingClass>
		<category>Item</category>
		<drawGUIOverlay>true</drawGUIOverlay>
		<altitudeLayer>Item</altitudeLayer>
		<alwaysHaulable>true</alwaysHaulable>
		<tickerType>Never</tickerType>
		<equipmentType>Primary</equipmentType>
		<useHitPoints>true</useHitPoints>
		<pathCost>10</pathCost>
		<selectable>true</selectable>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0</Flammability>
			<DeteriorationRate>0</DeteriorationRate>
			<Beauty>-6</Beauty>
			<SellPriceFactor>0.20</SellPriceFactor>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompEquippable</compClass>
			</li>
			<li>
				<compClass>CompOversizedWeapon.CompOversizedWeapon</compClass>
			</li>
		</comps>
		<graphicData>
			<onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
		</graphicData>
	</ThingDef>
	
	  

  <ThingDef Name="BaseGunSpecialAtlas" Abstract="True" ParentName="BaseWeaponSpecialAtlas">
		<techLevel>Spacer</techLevel>
		<smeltable>true</smeltable>
		<thingCategories>
      <li>WeaponsRanged</li>
    </thingCategories>
  </ThingDef>
  
	<ThingDef ParentName="BaseBullet">
    <defName>Bullet_40MMCannon</defName>
    <label>40MM Round</label>
    <graphicData>
      <texPath>Things/Projectile/ShellHighExplosive</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>55</damageAmountBase>
      <speed>110</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseGunSpecialAtlas">
    <defName>Mech40MMCannon</defName>
    <label>40MM Cannon</label>
    <description>This modified 40MM Cannon is capable of burst firing three 80kg rounds in quick succession. Designed for anti-material or mech : mech combat, it is quite the weapon. Originally being the factory standard when producing the M7 Mech, equipped on every unit in production.</description>
    <graphicData>
      <texPath>Things/Item/40MMCannon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>3</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>2000</MarketValue>
      <Mass>42</Mass>
      <AccuracyTouch>0.5</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
      <Weapon_Bulk>2.0</Weapon_Bulk>
    </statBases>
    <tradeability>Never</tradeability>
    <techLevel>Spacer</techLevel>
    <destroyOnDrop>False</destroyOnDrop>
    <menuHidden>False</menuHidden>
    <weaponTags>
      <li>MechM7Gun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_40MMCannon</defaultProjectile>
        <warmupTime>1.5</warmupTime>
        <range>55</range>
        <ticksBetweenBurstShots>25</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>40MMCannon</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>18</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>40</power>
        <cooldownTime>2.1</cooldownTime>
      </li>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>45</power>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>25</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
	<ThingDef ParentName="BaseBullet">
    <defName>Bullet_MastiffPellet</defName>
