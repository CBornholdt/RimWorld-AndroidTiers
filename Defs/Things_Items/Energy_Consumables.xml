      <li>Items</li>
    </thingCategories>
    <pathCost>10</pathCost>
    <techHediffsTags>
      <li>Advanced</li>
    </techHediffsTags>
  </ThingDef>

  <ThingDef ParentName="EnergySystemConsumable">
