<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="EnergySystemConsumable" Abstract="True">
    <label>energy system consumable</label>
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>1.0</Flammability>
			<DeteriorationRate>2.0</DeteriorationRate>
			<Beauty>-4</Beauty>
		</statBases>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>10</stackLimit>
    <tickerType>Normal</tickerType>
    <alwaysHaulable>true</alwaysHaulable>
    <isBodyPartOrImplant>false</isBodyPartOrImplant>
    <resourceReadoutPriority>Last</resourceReadoutPriority>
    <drawGUIOverlay>true</drawGUIOverlay>
    <ingestible>
      <foodType>None</foodType>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <preferability>NeverForNutrition</preferability>
      <maxNumToIngestAtOnce>3</maxNumToIngestAtOnce>
      <outcomeDoers>
        <li Class="MOARANDROIDS.IngestionOutcomeDoer_EnergyConsumable"/>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.1</startWickHitPointsPercent>
        <postExplosionSpawnThingDef>FilthFireFoam</postExplosionSpawnThingDef>
        <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
        <applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
        <explosionEffect>ExtinguisherExplosion</explosionEffect>
        <wickTicks>
          <min>10</min>
          <max>30</max>
        </wickTicks>
      </li>
    </comps>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <pathCost>10</pathCost>
    <techHediffsTags>
      <li>Advanced</li>
    </techHediffsTags>
  </ThingDef>

  <ThingDef ParentName="EnergySystemConsumable">
    <defName>AT_SmallConsumable</defName>
    <label>Small energy pack</label>
    <description>A small bank of capacitors, designed to deliver a quick burst of energy to an android, however: it isn't a lot.</description>
    <graphicData>
      <texPath>Things/Item/BatteryPack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>20</MarketValue>
      <Mass>0.5</Mass>
    </statBases>
    <techHediffsTags>
      <li>Simple</li>
    </techHediffsTags>
    <comps>
      <li Class="MOARANDROIDS.CompProperties_EnergyConsumable">
        <energyAmount>0.5</energyAmount>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="EnergySystemConsumable">
    <defName>AT_MediumConsumable</defName>
    <label>Medium energy pack</label>
    <description>This pack operates somewhat efficiently for it's size, able to easily recharge an android most of the way to it's full amount. </description>
    <graphicData>
      <texPath>Things/Item/BatteryPack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <itemGeneratorTags>
      <li>SpecialReward</li>
    </itemGeneratorTags>
    <statBases>
      <MarketValue>40</MarketValue>
      <Mass>1</Mass>
    </statBases>
    <techHediffsTags>
      <li>Advanced</li>
    </techHediffsTags>
    <comps>
      <li Class="MOARANDROIDS.CompProperties_EnergyConsumable">
        <energyAmount>1.0</energyAmount>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="EnergySystemConsumable">
    <defName>AT_LargeConsumable</defName>
    <label>Large energy pack</label>
    <description>This pack consists of a small array of highly efficient power cells that upon use: release an intense amount of power, charging most androids to their max capacity in a matter of seconds.</description>
    <graphicData>
      <texPath>Things/Item/BatteryPack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>80</MarketValue>
      <Mass>2</Mass>
    </statBases>
    <techHediffsTags>
      <li>secret</li>
    </techHediffsTags>
    <comps>
      <li Class="MOARANDROIDS.CompProperties_EnergyConsumable">
        <energyAmount>2.0</energyAmount>
      </li>
    </comps>
  </ThingDef>
  

  <!--Singular Energy Pack Recipes-->
  
   <RecipeDef>
      <defName>CreateSmallEnergyConsumable</defName>
      <label>Create Small Energy Pack</label>
      <description>Create one small energy pack from steel and components.</description>
      <jobString>Making Energy Pack</jobString>  
      <allowMixingIngredients>false</allowMixingIngredients>
      <ingredients>
         <li>
            <filter>
               <thingDefs>
                  <li>Steel</li>
               </thingDefs>
            </filter>
            <count>10</count>
         </li>
         <li>
            <filter>
               <thingDefs>
                  <li>Component</li>
               </thingDefs>
            </filter>
            <count>1</count>
         </li>
      </ingredients>
      <products>
         <AT_SmallConsumable>1</AT_SmallConsumable>
      </products>
	  <researchPrerequisite>Machining</researchPrerequisite>
      <workAmount>1000</workAmount>
      <workSkill>Crafting</workSkill>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSpeedStat>ButcheryMechanoidSpeed</workSpeedStat>
	 <recipeUsers>
		<li>TableMachining</li>
      </recipeUsers>
	</RecipeDef>
	
