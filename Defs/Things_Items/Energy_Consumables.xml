    <graphicData>
      <texPath>Things/Item/Implant/Implant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <itemGeneratorTags>
      <li>SpecialReward</li>
    </itemGeneratorTags>
    <statBases>
      <MarketValue>800</MarketValue>
      <Mass>0.2</Mass>
    </statBases>
    <comps>
      <li Class="MOARANDROIDS.CompProperties_EnergyConsumable">
        <energyAmount>0.5</energyAmount>
      </li>
    </comps>
